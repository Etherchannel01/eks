#############################################################################################################

region = "us-east-1"

vpc_cidr = "10.0.0.0/16"

environment = "development"

#############################################################################################################
#                                              EKS CONFIGURATION                                           #
#############################################################################################################
eks_version = "1.34"
recipe_version = "1.0.1"

eks_scaling_config = {
  desired_size = 1
  max_size     = 1
  min_size     = 1
}

eks_update_config = {
  max_unavailable = 1
}

eks_addons = {
  vpc-cni = {
    version = "v1.20.1-eksbuild.1"
  }
  eks-pod-identity-agent = {
    version = "v1.3.10-eksbuild.1"
  }
}


